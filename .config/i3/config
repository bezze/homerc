# Comm
assign [class="Friends"] $wrksp0
assign [class="Riot"] $wrksp0
assign [class="Rambox"] $wrksp0

# HDMI1
assign [title="hdmi*"] output HDMI1

# rtv custom floaters
for_window [title="rtv_feh"] floating enable
